<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ArcView">
        <attr name="arcColor" format="color"/>
        <attr name="bgColor" format="color"/>
        <attr name="arc_textColor" format="color"/>
        <attr name="arc_textSize" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="FloatLinearLayout">
        <attr name="layout_pin" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="Follow_Behavior">
        <attr name="target" format="reference"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="flowlayout_line_vertical_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="center_vertical" value="1"/>
            <enum name="bottom" value="2" />
        </attr>
        <attr name="android:maxLines"/>
    </declare-styleable>

</resources>