<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ArcView">
        <attr name="arcColor" format="color"/>
        <attr name="bgColor" format="color"/>
        <attr name="arc_textColor" format="color"/>
        <attr name="arc_textSize" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="FloatLinearLayout">
        <attr name="layout_pin" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="Follow_Behavior">
        <attr name="target" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomFlowLayout">
        <attr name="flowlayout_line_vertical_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="center_vertical" value="1"/>
            <enum name="bottom" value="2" />
        </attr>
        <attr name="android:maxLines"/>
        <attr name="maxCount" format="integer"/>
    </declare-styleable>
    
    <declare-styleable name="CoverLayout">
        <attr name="top_offset" format="dimension"/>
        <attr name="top_elevation" format="dimension"/>
        <attr name="trigger_open_offset" format="dimension"/>
        <attr name="transition_color" format="color"/>
        <attr name="residual_view" format="reference"/>
        <attr name="top_view" format="reference"/>
        <attr name="bottom_view" format="reference"/>
        <attr name="header_view" format="reference"/>
        <attr name="top_bar" format="reference"/>
        <attr name="bottom_bar" format="reference"/>
    </declare-styleable>

    <!--<declare-styleable name="CoffinLayout">
        <attr name="lid_offset" format="dimension" />
        <attr name="lid_elevation" format="dimension" />
        <attr name="trigger_open_offset" format="dimension" />
        <attr name="residual_view" format="reference" />
        <attr name="header_view" format="reference" />
        <attr name="transition_color" format="color" />
        <attr name="top_bar" format="reference"/>
        <attr name="bottom_bar" format="reference"/>
    </declare-styleable>-->

    <declare-styleable name="RulerView">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="lineSpaceWidth" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineMaxHeight" format="dimension" />
        <attr name="lineMidHeight" format="dimension" />
        <attr name="lineMinHeight" format="dimension" />
        <attr name="textMarginTop" format="dimension" />
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="selectorValue" format="float"/>
        <attr name="perValue" format="float"/>
    </declare-styleable>

</resources>