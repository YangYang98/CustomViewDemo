<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <Button
        android:id="@+id/btn_custom_flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CustomFlowLayout"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_custom_text_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网红时钟"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_cover_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推拉盒子布局"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_experience_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经验进度条"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_ruler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RulerView"
        android:textAllCaps="false"
        />


</LinearLayout>